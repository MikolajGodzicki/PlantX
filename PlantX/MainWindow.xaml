<Window x:Class="PlantX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:local="clr-namespace:PlantX.Controls"
        xmlns:vm="clr-namespace:PlantX.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        ResizeMode="NoResize"
        Height="600" 
        Width="920"
        Background="#FFFFFF">
    <Window.DataContext>
        <vm:MainViewModel/>     
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
 
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="PlantX"
                       FontSize="24"
                       Style="{StaticResource MenuTitleTheme}"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Informacje"
                       Style="{StaticResource MenuTitleTheme}"/>

            <StackPanel Grid.Row="1">
                <local:MenuButtonControl Command="{Binding PlantsCommand}"
                                             IsChecked="True"
                                             Content="Rośliny"
                                             IconSource="/Icons/plant.png"
                                             Style="{StaticResource MenuButtonTheme}"/>

                <local:MenuButtonControl Command="{Binding FieldsCommand}"
                                             Content="Obszary polne"
                                             IconSource="/Icons/field.png"
                                             Style="{StaticResource MenuButtonTheme}"/>

                <local:MenuButtonControl Command="{Binding PesticidesCommand}"
                                             Content="Pestycydy"
                                             IconSource="/Icons/pesticide.png"
                                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>


            <TextBlock Text="Raporty"
                       Style="{StaticResource MenuTitleTheme}"
                       Grid.Row="2"/>

            <StackPanel Grid.Row="3">
                <local:MenuButtonControl Command="{Binding RaportCreatorCommand}"
                                             Content="Stwórz raport"
                                             IconSource="/Icons/diagram.png"
                                             Style="{StaticResource MenuButtonTheme}"/>

                <local:MenuButtonControl Command="{Binding ShowRaportsCommand}"
                                             Content="Wszystkie raporty"
                                             IconSource="/Icons/raport.png"
                                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>
        </Grid>

        <Border VerticalAlignment="Stretch" 
                    HorizontalAlignment="Right" 
                    Width="1" 
                    Grid.RowSpan="2" 
                    Background="#E0E0E0"/>
        
        <Border CornerRadius="10" 
                Grid.Column="1"
                Height="40"
                Background="#F3F3F3"
                Margin="50,0,0,0"
                HorizontalAlignment="Left">

            <StackPanel  Orientation="Horizontal">
                <RadioButton Content="Utwórz"
                             Margin="5,0,5,0"
                             Height="30"
                             IsChecked="True"
                             Style="{StaticResource MainViewButton}"/>
                <RadioButton Content="Edytuj"
                             Margin="0,0,5,0"
                             Height="30"
                             Style="{StaticResource MainViewButton}"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        Margin="20"
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>
